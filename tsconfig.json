{
  "compilerOptions": {
    "target": "ESNext" /* Set the JavaScript language version for emitted JavaScript and include compatible library declarations. */,
    "esModuleInterop": true /* Emit additional JavaScript to ease support for importing CommonJS modules. This enables 'allowSyntheticDefaultImports' for type compatibility. */,
    "forceConsistentCasingInFileNames": true /* Ensure that casing is correct in imports. */,
    "strict": true /* Enable all strict type-checking options. */,
    "skipLibCheck": true /* Skip type checking all .d.ts files. */,
    "jsx": "react", //we need this to bundle to know jsx => react.createElement function call
    "module": "ESNext", //module was set by common.js
    "declaration": true, //we want our library to be used by anyone.
    "declarationDir": "dist",
    "sourceMap": true, //for debugging it provides error handling in the specific file number
    "moduleResolution": "node", //it uses node modoule resolution
    "allowSyntheticDefaultImports": true, //if you are not exporting something by defaut it will assume you are
    "emitDeclarationOnly": true, //the tool we will use our js file
    "noImplicitAny": false,
    "allowJs": true,
    "checkJs": false
  }
}